        <param name="if.$foo$=bar">foo is bar!!</param>

        <module name="HTML">
          <param name="html"><![CDATA[
            says "foo is bar" as appropriate. Otherwise nothing<br>
            $friendOfFoo$
          ]]></param>
        </module>
      </module>
    </module>


    <module name="Pulldown" layoutPanel="panel_row1_col3">
